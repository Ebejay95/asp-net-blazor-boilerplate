@attribute [Authorize(Roles = "super-admin")]
@using System.Linq
@using CMC.Contracts.Evidences
@using CMC.Web.Services
@using CMC.Web.Util
@using CMC.Domain.Entities
@inject CMC.Application.Services.EvidenceService EvidenceService
@inject EFEditService EFEditService
@inject DialogService ConfirmService

<div class="card">
    <EFTable TItem="EvidenceDto"
               Items="_evidences"
               AllowEdit="true"
               OnEdit="StartEdit"
               AllowCreate="true"
               OnCreate="StartCreate" />
</div>

@code {
    private List<EvidenceDto> _evidences = new();

    protected override async Task OnInitializedAsync()
        => _evidences = await EvidenceService.GetAllAsync();

    private async Task Reload()
    {
        _evidences = await EvidenceService.GetAllAsync();
        StateHasChanged();
    }

    private void StartEdit(EvidenceDto evidence)
    {
        var req = new EFEditRequest
        {
            Title = "Nachweis bearbeiten",
            Model = evidence,
            ContractsAssembly = typeof(EvidenceDto).Assembly,
            EfParentType = typeof(Evidence),
            GetParentKey = m => ((EvidenceDto)m).Id,
            IsCreate = false,
            OnSave = async ctx =>
            {
                try
                {
                    var up = (UpdateEvidenceRequest)ctx.Build("Update");
                    _ = await EvidenceService.UpdateAsync(up);
                    await Reload();
                    EFEditService.Close();
                }
                catch (Exception ex)
                {
                    ConfirmService.Open(new DialogRequest
                    {
                        Title = "Fehler beim Speichern",
                        Message = ex.Message,
                        ConfirmText = "Okay",
                        OnConfirm = () => Task.CompletedTask
                    });
                }
            },
            OnDelete = ctx =>
            {
                var model = (EvidenceDto)ctx.Model;

                ConfirmService.Open(new DialogRequest
                {
                    Title = "Löschen bestätigen",
                    Message = "Nachweis wirklich löschen?",
                    ConfirmText = "Löschen",
                    CancelText = "Abbrechen",
                    OnConfirm = async () =>
                    {
                        try
                        {
                            await EvidenceService.DeleteAsync(model.Id);
                            await Reload();
                            EFEditService.Close();
                        }
                        catch (Exception ex)
                        {
                            ConfirmService.Open(new DialogRequest
                            {
                                Title = "Löschen fehlgeschlagen",
                                Message = ex.Message,
                                ConfirmText = "Okay",
                                OnConfirm = () => Task.CompletedTask
                            });
                        }
                    }
                });

                return Task.CompletedTask;
            },
            OnAfterRestore = async () =>
            {
                await Reload();
                EFEditService.Close();
            }
        };

        // Relation: Evidence → Customer
        req.ExtraFields.Add(new ExtraField(
            Name: "CustomerId",
            Label: "Kunde",
            Type: typeof(Guid),
            DataType: "relation-auto",
            Value: evidence.CustomerId
        ));

        EFEditService.Open(req);
    }

    private void StartCreate()
    {
        var empty = new EvidenceDto
        {
            Id = Guid.Empty,
            CustomerId = Guid.Empty,
            Source = string.Empty,
            Location = string.Empty,
            CollectedAt = DateTime.UtcNow,
            ValidUntil = (DateTime?)null,
            HashSha256 = string.Empty,
            Confidentiality = string.Empty,
            CreatedAt = DateTime.UtcNow,
            UpdatedAt = DateTime.UtcNow
        };

        var req = new EFEditRequest
        {
            Title = "Nachweis anlegen",
            Model = empty,
            ContractsAssembly = typeof(EvidenceDto).Assembly,
            EfParentType = typeof(Evidence),
            GetParentKey = m => ((EvidenceDto)m).Id,
            IsCreate = true,
            OnSave = async ctx =>
            {
                try
                {
                    var create = (CreateEvidenceRequest)ctx.Build("Create");
                    _ = await EvidenceService.CreateAsync(create);
                    await Reload();
                    EFEditService.Close();
                }
                catch (Exception ex)
                {
                    ConfirmService.Open(new DialogRequest
                    {
                        Title = "Fehler beim Anlegen",
                        Message = ex.Message,
                        ConfirmText = "Okay",
                        OnConfirm = () => Task.CompletedTask
                    });
                }
            }
        };

        req.ExtraFields.Add(new ExtraField(
            Name: "CustomerId",
            Label: "Kunde",
            Type: typeof(Guid),
            DataType: "relation-auto",
            Value: Guid.Empty
        ));

        EFEditService.Open(req);
    }
}

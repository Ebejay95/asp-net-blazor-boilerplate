@attribute [Authorize(Roles = "super-admin")]
@using System.Linq
@using CMC.Contracts.ToDos
@using CMC.Web.Services
@using CMC.Web.Util
@using CMC.Domain.Entities
@inject CMC.Application.Services.ToDoService ToDoService
@inject EFEditService EFEditService
@inject DialogService ConfirmService

<div class="card">
    <EFTable TItem="ToDoDto"
               Items="_todos"
               AllowEdit="true"
               OnEdit="StartEdit"
               AllowCreate="true"
               OnCreate="StartCreate" />
</div>

@code {
    private List<ToDoDto> _todos = new();

    protected override async Task OnInitializedAsync()
    {
        _todos = await ToDoService.GetAllAsync();
    }

    private async Task Reload()
    {
        _todos = await ToDoService.GetAllAsync();
        StateHasChanged();
    }

    private void StartEdit(ToDoDto todo)
    {
        var req = new EFEditRequest
        {
            Title = "Aufgabe bearbeiten",
            Model = todo,
            ContractsAssembly = typeof(ToDoDto).Assembly,
            EfParentType = typeof(ToDo),
            GetParentKey = m => ((ToDoDto)m).Id,
            IsCreate = false,
            OnSave = async ctx =>
            {
                try
                {
                    var up = (UpdateToDoRequest)ctx.Build("Update");
                    _ = await ToDoService.UpdateAsync(up);
                    await Reload();
                    EFEditService.Close();
                }
                catch (Exception ex)
                {
                    ConfirmService.Open(new DialogRequest
                    {
                        Title = "Fehler beim Speichern",
                        Message = ex.Message,
                        ConfirmText = "Okay",
                        OnConfirm = () => Task.CompletedTask
                    });
                }
            },
            OnDelete = ctx =>
            {
                var model = (ToDoDto)ctx.Model;

                ConfirmService.Open(new DialogRequest
                {
                    Title = "Löschen bestätigen",
                    Message = $"Aufgabe \"{model.Name}\" wirklich löschen?",
                    ConfirmText = "Löschen",
                    CancelText = "Abbrechen",
                    OnConfirm = async () =>
                    {
                        try
                        {
                            await ToDoService.DeleteAsync(model.Id);
                            await Reload();
                            EFEditService.Close();
                        }
                        catch (Exception ex)
                        {
                            ConfirmService.Open(new DialogRequest
                            {
                                Title = "Löschen fehlgeschlagen",
                                Message = ex.Message,
                                ConfirmText = "Okay",
                                OnConfirm = () => Task.CompletedTask
                            });
                        }
                    }
                });

                return Task.CompletedTask;
            },
            OnAfterRestore = async () =>
            {
                await Reload();
                EFEditService.Close();
            }
        };

        // Relation: ToDo → Control
        req.ExtraFields.Add(new ExtraField(
            Name: "ControlId",
            Label: "Control",
            Type: typeof(Guid),
            DataType: "relation-auto",
            Value: todo.ControlId
        ));

        EFEditService.Open(req);
    }

    private void StartCreate()
    {
        var empty = new ToDoDto
        {
            Id = Guid.Empty,
            ControlId = Guid.Empty,
            Name = string.Empty,
            InternalDays = 0,
            ExternalDays = 0,
            TotalDays = 0,
            StartDate = null,
            EndDate = null,
            Status = "todo",
            Assignee = string.Empty,
            CreatedAt = DateTime.UtcNow,
            UpdatedAt = DateTime.UtcNow
        };

        var req = new EFEditRequest
        {
            Title = "Aufgabe anlegen",
            Model = empty,
            ContractsAssembly = typeof(ToDoDto).Assembly,
            EfParentType = typeof(ToDo),
            GetParentKey = m => ((ToDoDto)m).Id,
            IsCreate = true,
            OnSave = async ctx =>
            {
                try
                {
                    var create = (CreateToDoRequest)ctx.Build("Create");
                    _ = await ToDoService.CreateAsync(create);
                    await Reload();
                    EFEditService.Close();
                }
                catch (Exception ex)
                {
                    ConfirmService.Open(new DialogRequest
                    {
                        Title = "Fehler beim Anlegen",
                        Message = ex.Message,
                        ConfirmText = "Okay",
                        OnConfirm = () => Task.CompletedTask
                    });
                }
            }
        };

        req.ExtraFields.Add(new ExtraField(
            Name: "ControlId",
            Label: "Control",
            Type: typeof(Guid),
            DataType: "relation-auto",
            Value: Guid.Empty
        ));

        EFEditService.Open(req);
    }
}

@attribute [Authorize(Roles = "super-admin")]
@using System
@using System.Linq
@using CMC.Contracts.LibraryScenarios
@using CMC.Web.Services
@using CMC.Web.Util
@using CMC.Domain.Entities
@inject CMC.Application.Services.LibraryScenarioService LibraryScenarioService
@inject EFEditService EFEditService
@inject DialogService ConfirmService

<div class="card">
    <EFTable TItem="LibraryScenarioDto"
             Items="_scenarios"
             AllowEdit="true"
             OnEdit="StartEdit"
             AllowCreate="true"
             OnCreate="StartCreate" />
</div>

@code {
    private List<LibraryScenarioDto> _scenarios = new();

    protected override async Task OnInitializedAsync()
        => _scenarios = await LibraryScenarioService.GetAllAsync();

    private async Task Reload()
    {
        _scenarios = await LibraryScenarioService.GetAllAsync();
        StateHasChanged();
    }

    private void StartEdit(LibraryScenarioDto scenario)
    {
        var req = new EFEditRequest
        {
            Title = "Szenario bearbeiten",
            Model = scenario,
            ContractsAssembly = typeof(LibraryScenarioDto).Assembly,
            EfParentType = typeof(LibraryScenario),
            GetParentKey  = m => ((LibraryScenarioDto)m).Id,
            IsCreate = false,
            OnSave = async ctx =>
            {
                try
                {
                    var dto = (LibraryScenarioDto)ctx.Model;

                    var name = ctx.TryGetValue("Name", out var rawName)
                        ? rawName?.ToString()?.Trim() ?? ""
                        : dto.Name;

                    // Dezimalfelder robust lesen (string -> decimal)
                    var annualFreq = TryGetDecimal(ctx, "AnnualFrequency", dto.AnnualFrequency);
                    var impactPct  = TryGetDecimal(ctx, "ImpactPctRevenue", dto.ImpactPctRevenue);

                    var tagIds = ExtractGuidArray(ctx.TryGetValue("TagIds", out var rawTags) ? rawTags : dto.TagIds);
                    var industryIds = ExtractGuidArray(ctx.TryGetValue("IndustryIds", out var rawInds) ? rawInds : dto.IndustryIds);

                    var up = new UpdateLibraryScenarioRequest(
                        Id: dto.Id,
                        Name: name,
                        AnnualFrequency: annualFreq,
                        ImpactPctRevenue: impactPct,
                        TagIds: tagIds,
                        IndustryIds: industryIds
                    );

                    _ = await LibraryScenarioService.UpdateAsync(up);
                    await Reload();
                    EFEditService.Close();
                }
                catch (Exception ex)
                {
                    ConfirmService.Open(new DialogRequest
                    {
                        Title = "Fehler beim Speichern",
                        Message = ex.Message,
                        ConfirmText = "Okay",
                        OnConfirm = () => Task.CompletedTask
                    });
                }
            },
            OnDelete = ctx =>
            {
                var model = (LibraryScenarioDto)ctx.Model;

                ConfirmService.Open(new DialogRequest
                {
                    Title = "Löschen bestätigen",
                    Message = "Szenario " + model.Name + " wirklich löschen?",
                    ConfirmText = "Löschen",
                    CancelText = "Abbrechen",
                    OnConfirm = async () =>
                    {
                        try
                        {
                            await LibraryScenarioService.DeleteAsync(model.Id);
                            await Reload();
                            EFEditService.Close();
                        }
                        catch (Exception ex)
                        {
                            ConfirmService.Open(new DialogRequest
                            {
                                Title = "Löschen fehlgeschlagen",
                                Message = ex.Message,
                                ConfirmText = "Okay",
                                OnConfirm = () => Task.CompletedTask
                            });
                        }
                    }
                });

                return Task.CompletedTask;
            },
            OnAfterRestore = async () =>
            {
                await Reload();
                EFEditService.Close();
            }
        };

        EFEditService.Open(req);
    }

    private void StartCreate()
    {
        var empty = new LibraryScenarioDto
        {
            Id = Guid.Empty,
            Name = string.Empty,
            AnnualFrequency = 0m,
            ImpactPctRevenue = 0m,
            TagIds = Array.Empty<Guid>(),
            IndustryIds = Array.Empty<Guid>(),
            TagLabels = Array.Empty<string>(),
            IndustryLabels = Array.Empty<string>(),
            CreatedAt = DateTimeOffset.UtcNow,
            UpdatedAt = DateTimeOffset.UtcNow
        };

        var req = new EFEditRequest
        {
            Title = "Szenario anlegen",
            Model = empty,
            ContractsAssembly = typeof(LibraryScenarioDto).Assembly,
            EfParentType = typeof(LibraryScenario),
            GetParentKey  = m => ((LibraryScenarioDto)m).Id,
            IsCreate = true,
            OnSave = async ctx =>
            {
                try
                {
                    var dto = (LibraryScenarioDto)ctx.Model;

                    var name = ctx.TryGetValue("Name", out var rawName)
                        ? rawName?.ToString()?.Trim() ?? ""
                        : dto.Name;

                    var annualFreq = TryGetDecimal(ctx, "AnnualFrequency", dto.AnnualFrequency);
                    var impactPct  = TryGetDecimal(ctx, "ImpactPctRevenue", dto.ImpactPctRevenue);

                    var tagIds = ExtractGuidArray(ctx.TryGetValue("TagIds", out var rawTags) ? rawTags : dto.TagIds);
                    var industryIds = ExtractGuidArray(ctx.TryGetValue("IndustryIds", out var rawInds) ? rawInds : dto.IndustryIds);

                    var create = new CreateLibraryScenarioRequest(
                        Name: name,
                        AnnualFrequency: annualFreq,
                        ImpactPctRevenue: impactPct,
                        TagIds: tagIds,
                        IndustryIds: industryIds
                    );

                    _ = await LibraryScenarioService.CreateAsync(create);
                    await Reload();
                    EFEditService.Close();
                }
                catch (Exception ex)
                {
                    ConfirmService.Open(new DialogRequest
                    {
                        Title = "Fehler beim Anlegen",
                        Message = ex.Message,
                        ConfirmText = "Okay",
                        OnConfirm = () => Task.CompletedTask
                    });
                }
            }
        };

        EFEditService.Open(req);
    }

    // --------- Helpers ---------

    private static decimal TryGetDecimal(EditContextAdapter ctx, string name, decimal fallback)
    {
        if (!ctx.TryGetValue(name, out var raw) || raw is null) return fallback;

        // raw kann string, decimal, double o.ä. sein
        if (raw is decimal d) return d;
        if (raw is double dbl) return (decimal)dbl;
        if (raw is float fl) return (decimal)fl;
        if (raw is int i) return i;
        if (raw is long l) return l;

        var s = raw.ToString();
        return decimal.TryParse(s, System.Globalization.NumberStyles.Any, System.Globalization.CultureInfo.InvariantCulture, out var parsed)
            ? parsed
            : decimal.TryParse(s, out parsed) ? parsed : fallback;
    }

    private static Guid[] ExtractGuidArray(object? value)
    {
        var list = new List<Guid>();

        switch (value)
        {
            case null:
                return Array.Empty<Guid>();

            case IEnumerable<Guid> gs:
                list.AddRange(gs.Where(g => g != Guid.Empty));
                break;

            case IEnumerable<string> ss:
                foreach (var s in ss)
                    if (Guid.TryParse(s, out var g) && g != Guid.Empty)
                        list.Add(g);
                break;

            case System.Collections.IEnumerable seq when value is not string:
                foreach (var e in seq)
                {
                    var s = e?.ToString();
                    if (!string.IsNullOrWhiteSpace(s) && Guid.TryParse(s, out var g) && g != Guid.Empty)
                        list.Add(g);
                }
                break;

            default:
                var one = value.ToString();
                if (!string.IsNullOrWhiteSpace(one) && Guid.TryParse(one, out var g1) && g1 != Guid.Empty)
                    list.Add(g1);
                break;
        }

        return list.Distinct().ToArray();
    }
}
